<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.varunest.sparkbutton.SparkButton
            android:id="@+id/spark_button"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:sparkbutton_activeImage="@drawable/active_bulb"
            app:sparkbutton_inActiveImage="@drawable/inactive_bulb_white"
            app:sparkbutton_iconSize="64dp"
            app:sparkbutton_primaryColor="@color/colorBulbPrimary"
            app:sparkbutton_secondaryColor="@color/colorBulbSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>